<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <settings>
        <setting name="mapUnderscoreToCamelCase" value="true"/>
    </settings>

    <typeAliases>
        <typeAlias type="com.bit.spring.model.MemberDTO" alias="memberDTO"/>
        <typeAlias type="com.bit.spring.model.ProductDTO" alias="productDTO"/>
        <typeAlias type="com.bit.spring.model.CartDTO" alias="cartDTO"/>

        <typeAlias type="com.bit.spring.model.Product" alias="product"/>
    </typeAliases>

    <mappers>
        <mapper resource="config/mybatis/mapper/MemberMapper.xml"/>
        <mapper resource="config/mybatis/mapper/ProductMapper.xml"/>
        <mapper resource="config/mybatis/mapper/CartMapper.xml"/>

        <mapper resource="config/mybatis/mapper/ImgMapper.xml"/>

    </mappers>

</configuration>